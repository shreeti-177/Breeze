<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
        <!--            app:title="@string/page_title"-->
        <!--            app:menu="@menu/top_app_bar"-->
        <!--            app:navigationIcon="@drawable/ic_menu_24dp"-->


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

        <!--Features-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <GridLayout
                android:id="@+id/featureGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2">

                <!--Row 1-->

                <!--Column 1-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/myBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            android:contentDescription="@string/feature1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/feature_my_budget" />

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feature1"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <!--Column 2-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/myCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            android:contentDescription="@string/feature2"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/feature_my_categories" />

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feature2"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!--Row 2-->

                <!--Column 1-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/myHabits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            android:contentDescription="@string/feature3"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/feature_my_habits" />

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feature3"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!--Column 2-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/myPlans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            android:contentDescription="@string/feature4"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/feature_my_plans" />

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feature4"
                            android:textAppearance="?attr/textAppearanceHeadline6" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addCashTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="@string/feature5"
            android:tint="@color/white"
            app:srcCompat="@drawable/feature_add_transactions" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>